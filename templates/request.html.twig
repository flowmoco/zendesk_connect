<p>Request ID: {{request_id}}</p>
<p>{{request.request.description}}</p>
<br>

<ul class="request-comments">
    {% for comment in comments %}
      <li class="request-comment">
        <div class="comment-body">
          <p>{{ comment.body|e }}</p>
        </div>
        <div class="comment-meta">
          <p>Said {{ comment.author_id }} on {{ comment.created_at }}</p>
        </div>
      </li>
    {% endfor %}
</ul>

<ul class="request-comments">
    {% for author in commentAuthors %}
      <li class="request-comment">
        <div class="comment-body">
          <p>{{ author.name|e }}</p>
        </div>
      </li>
    {% endfor %}
</ul>

{{ form }}
